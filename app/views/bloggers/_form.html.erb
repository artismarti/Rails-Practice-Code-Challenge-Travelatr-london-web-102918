<% if flash[:errors] %>
  <% flash[:errors].each do |e| %>
    <p style="color: red;"> <%= e %> </p>
  <% end %>
<% else %>
    <p>Add Blogger</p>
<% end %>
<%= form_for @blogger do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <%= f.label :bio %>
  <%= f.text_area :bio %><br>
  <%= f.label :age %>
  <%= f.text_field :age %><br>
  <%= f.submit %>
<% end %>
